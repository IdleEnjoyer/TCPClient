<Window x:Class="TCPDevice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TCPDevice"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Margin="0,0,0,-16">
        <Label x:Name="DeviceHeader" Content="TCP Client" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Width="176" FontSize="36"/>
        <Border HorizontalAlignment="Left" Height="318" Margin="20,80,0,0" VerticalAlignment="Top" Width="740">
            <Grid>
                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="286" VerticalAlignment="Top" Width="343"/>

                <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="318" Margin="359,0,0,0" VerticalAlignment="Center" Width="380">
                    <Button x:Name="ShowData" Content="Show" HorizontalAlignment="Left" Height="43" Margin="69,264,0,0" VerticalAlignment="Top" Width="135" FontSize="24" Click="ShowData_Click"/>
                </Border>

                <Label Content="Connection:" HorizontalAlignment="Left" Height="42" Margin="0,13,0,0" VerticalAlignment="Top" Width="142" FontSize="24"/>
                <Label x:Name="ConnectionStatus" Content="Not connected" HorizontalAlignment="Left" Margin="147,13,0,0" VerticalAlignment="Top" FontSize="24" Foreground="Red" Width="176"/>
                <Label Content="IP:" HorizontalAlignment="Left" Margin="0,63,0,0" VerticalAlignment="Top" FontSize="24" Width="142"/>
                <TextBox x:Name="IPInput" HorizontalAlignment="Left" Height="42" Margin="147,63,0,0" TextWrapping="Wrap" Text="192.168.0.1" VerticalAlignment="Top" Width="176" FontSize="24" TextAlignment="Justify"/>
                <TextBox x:Name="PortInput" HorizontalAlignment="Left" Margin="147,111,0,0" TextWrapping="Wrap" Text="8000" VerticalAlignment="Top" Width="176" Height="42" FontSize="24" TextAlignment="Justify"/>
                <Label Content="Port:" HorizontalAlignment="Left" Margin="0,111,0,0" VerticalAlignment="Top" FontSize="24" Width="142"/>
                <Label Content="Data:" HorizontalAlignment="Left" Margin="359,13,0,0" VerticalAlignment="Top" FontSize="24"/>
                <Button x:Name="StartConnection" Content="Start" HorizontalAlignment="Left" Height="50" Margin="42,209,0,0" VerticalAlignment="Top" Width="100" FontSize="24" Click="StartConnection_Click"/>
                <TextBox x:Name="DataField" HorizontalAlignment="Left" Height="246" Margin="429,13,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="299" FontSize="24"/>
                <TextBox x:Name="EndSymbol" HorizontalAlignment="Left" Margin="147,162,0,0" TextWrapping="Wrap" Text="!" VerticalAlignment="Top" Width="176" Height="42" FontSize="24" TextAlignment="Justify"/>
                <Label Content="End symbol:" HorizontalAlignment="Left" Margin="0,162,0,0" VerticalAlignment="Top" FontSize="24" Width="142"/>
                <Button x:Name="StartConnection_Копировать" Content="Start" HorizontalAlignment="Left" Height="50" Margin="42,209,0,0" VerticalAlignment="Top" Width="100" FontSize="24" Click="StartConnection_Click"/>
                <Button x:Name="StopConnection" Content="Stop" HorizontalAlignment="Left" Height="50" Margin="147,209,0,0" VerticalAlignment="Top" Width="100" FontSize="24" Click="StopConnection_Click"/>
                <Button x:Name="SendData" Content="Add" HorizontalAlignment="Left" Height="43" Margin="590,265,0,0" VerticalAlignment="Top" Width="138" FontSize="24" Click="SendData_Click"/>

            </Grid>
        </Border>

    </Grid>
</Window>
